
    <div class="btn-group-vertical col-md-7" data-toggle="buttons">
        @if(ViewBag.multiple > 0)
        { 
        <label class="btn btn-default">
            <input id="multipleCheck" type="checkbox"> Множественный
        </label>
        }
        else
        {
        <label class="btn btn-default disabled">
            <input id="multipleCheck" type="checkbox"> <del>Множественный</del> 
        </label>
        }
        @if (ViewBag.trueOrLie > 0)
{
    <label class="btn btn-default">
        <input id="trueOrLieCheck" type="checkbox"> Правда/Ложь
    </label>
}
else
{
    <label class="btn btn-default disabled">
        <input id="trueOrLieCheck" type="checkbox"> <del>Правда/Ложь</del>
    </label>
}
        @if (ViewBag.smalAnswer > 0)
{
    <label class="btn btn-default">
        <input id="smalAnswerCheck" type="checkbox"> Краткий ответ
    </label>
}
else
{
    <label class="btn btn-default disabled">
        <input id="SmalAnswerCheck" type="checkbox"> <del>Краткий ответ</del>
    </label>
}
        @if (ViewBag.essay > 0)
{
